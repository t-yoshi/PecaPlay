<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.peercast.pecaplay.prefs.FavoriteEditorViewModel" />

        <variable
            name="isAdvancedMode"
            type="boolean" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/pref_favorite_editor_pane_basic"
                bind:viewModel="@{viewModel}"
                bind:isAdvancedMode="@{isAdvancedMode}"
                />
            <include layout="@layout/pref_favorite_editor_pane_advanced"
                bind:viewModel="@{viewModel}"
                bind:isAdvancedMode="@{isAdvancedMode}"
                />

        </FrameLayout>
    </ScrollView>
</layout>