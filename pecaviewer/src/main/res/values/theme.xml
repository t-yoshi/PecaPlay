        <item name="actionOverflowButtonStyle">@style/ViewerTheme.OverflowButtonStyle</item>
    </style>

    <style name="ViewerTheme.OverflowButtonStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_36dp</item>
